<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.chunyu.spike.wcl_rxandroid_threads_demo.MainActivity">

    <RelativeLayout
        android:id="@+id/main_rl_default_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/main_tv_default_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Compute线程: "/>

        <TextView
            android:id="@+id/main_tv_compute_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/main_tv_default_title"
            android:layout_toRightOf="@+id/main_tv_default_title"
            tools:text="100毫秒"/>

        <Button
            android:id="@+id/main_b_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="computePara"
            android:text="开始"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_rl_default_container"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/main_tv_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="定制线程: "/>

        <TextView
            android:id="@+id/main_tv_custom_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/main_tv_custom_title"
            android:layout_toRightOf="@+id/main_tv_custom_title"
            tools:text="100毫秒"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:onClick="customPara"
            android:text="开始"/>
    </RelativeLayout>

</RelativeLayout>
